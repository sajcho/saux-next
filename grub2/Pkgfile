# Description:	A Multiboot boot loader
# URL:		http://www.gnu.org/software/grub/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	bash gettext libdevmapper python3

name=grub2
_realname=grub
version=2.06
release=1
source=(https://ftp.gnu.org/gnu/${_realname}/${_realname}-${version}.tar.xz \
	grub.default)

build() {
	cd ${_realname}-${version}

	unset CFLAGS
	unset CXXFLAGS
	unset LDFLAGS

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--disable-nls \
		--disable-efiemu \
		--disable-werror \
		--disable-grub-mount \
		--disable-grub-mkfont \
		--disable-grub-themes

	make V=1 -j1

	make -j1 DESTDIR=$PKG install

	install -D -m 0644 $SRC/grub.default $PKG/etc/default/grub
	install -D -m 0644 $PKG/etc/bash_completion.d/grub \
		$PKG/usr/share/bash-completion/completions/grub

	rm -r $PKG/etc/bash_completion.d
	rm -r $PKG/usr/share/info
}
